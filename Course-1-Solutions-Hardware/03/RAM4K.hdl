/**
 * Memory of 4K 16-bit registers.
 * If load is asserted, the value of the register selected by
 * address is set to in; Otherwise, the value does not change.
 * The value of the selected register is emitted by out.
 */
CHIP RAM4K {
    IN in[16], load, address[12];
    OUT out[16];

    PARTS:
    DMux8Way(in=load, sel=address[9..11], a=dmuxa, b=dmuxb, c=dmuxc, d=dmuxd, e=dmuxe, f=dmuxf, g=dmuxg, h=dmuxh);
    RAM512(in=in, load=dmuxa, address=address[0..8], out=outa);
    RAM512(in=in, load=dmuxb, address=address[0..8], out=outb);
    RAM512(in=in, load=dmuxc, address=address[0..8], out=outc);
    RAM512(in=in, load=dmuxd, address=address[0..8], out=outd);
    RAM512(in=in, load=dmuxe, address=address[0..8], out=oute);
    RAM512(in=in, load=dmuxf, address=address[0..8], out=outf);
    RAM512(in=in, load=dmuxg, address=address[0..8], out=outg);
    RAM512(in=in, load=dmuxh, address=address[0..8], out=outh);

    Mux8Way16(a=outa, b=outb, c=outc, d=outd, e=oute, f=outf, g=outg, h=outh, sel=address[9..11], out=out);

}